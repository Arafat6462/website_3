# =============================================================================
# Production Environment Variables Template
# =============================================================================
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# REQUIRED: Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# REQUIRED: Set to False in production
DEBUG=False

# REQUIRED: Your actual domain(s), comma-separated
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# REQUIRED: Django settings module
DJANGO_SETTINGS_MODULE=config.settings.production

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

DB_NAME=ecom_db
DB_USER=ecom_user
DB_PASSWORD=your-strong-database-password-here
DB_HOST=db
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Cache Configuration
# -----------------------------------------------------------------------------

REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@redis:6379/0

# -----------------------------------------------------------------------------
# CORS & CSRF Configuration
# -----------------------------------------------------------------------------

# REQUIRED: Your frontend URL(s), comma-separated
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# REQUIRED: Trusted origins for CSRF, comma-separated
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------

# Email backend (SMTP for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP server settings (example: Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# REQUIRED: Your email credentials
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Sender email
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=admin@yourdomain.com

# -----------------------------------------------------------------------------
# Site Information
# -----------------------------------------------------------------------------

SITE_NAME=Your E-Commerce Store
SITE_URL=https://yourdomain.com

# -----------------------------------------------------------------------------
# Cloud Storage (S3/R2/Spaces)
# -----------------------------------------------------------------------------

# AWS/S3-compatible storage credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name

# For Cloudflare R2 or DigitalOcean Spaces, set endpoint
AWS_S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
# Or for DO Spaces: https://nyc3.digitaloceanspaces.com

# AWS region (if using AWS S3)
AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# Security (Optional)
# -----------------------------------------------------------------------------

# Admin URL (change for obscurity)
ADMIN_URL=admin/

# Admin IP whitelist (comma-separated, leave empty to disable)
ADMIN_ALLOWED_IPS=

# -----------------------------------------------------------------------------
# Monitoring & Logging (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking
SENTRY_DSN=

# Log level
DJANGO_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Payment Gateways (Bangladesh)
# -----------------------------------------------------------------------------

# bKash credentials
BKASH_APP_KEY=
BKASH_APP_SECRET=
BKASH_USERNAME=
BKASH_PASSWORD=
BKASH_BASE_URL=https://tokenized.pay.bka.sh/v1.2.0-beta

# Nagad credentials
NAGAD_MERCHANT_ID=
NAGAD_MERCHANT_NUMBER=
NAGAD_PUBLIC_KEY=
NAGAD_PRIVATE_KEY=

# SSLCommerz credentials
SSLCOMMERZ_STORE_ID=
SSLCOMMERZ_STORE_PASSWORD=
SSLCOMMERZ_IS_SANDBOX=False

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 1. Keep this file secure and never commit to Git
# 2. Use strong, random passwords for all credentials
# 3. Rotate secrets regularly
# 4. Use environment-specific values (don't reuse dev credentials)
# 5. Test in staging environment before production deployment
