# =============================================================================
# Environment Variables Template
# =============================================================================
# Purpose: Template for environment configuration
# Usage: Copy to .env and fill in your values
#        cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
# DJANGO_SETTINGS_MODULE: Which settings file to use
# DEBUG: Enable debug mode (NEVER True in production!)
# SECRET_KEY: Django secret key (generate a new one for production)
# ALLOWED_HOSTS: Comma-separated list of allowed hosts
# -----------------------------------------------------------------------------
DJANGO_SETTINGS_MODULE=config.settings.development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-use-50-chars-minimum
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection settings
# These must match docker-compose.dev.yml postgres service
# -----------------------------------------------------------------------------
DB_NAME=ecom_db
DB_USER=ecom_user
DB_PASSWORD=ecom_password
DB_HOST=db
DB_PORT=5432

# -----------------------------------------------------------------------------
# Storage Configuration (for production - optional for development)
# -----------------------------------------------------------------------------
# For Cloudflare R2 or S3-compatible storage
# Leave empty to use local file storage in development
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_ENDPOINT_URL=
# AWS_S3_CUSTOM_DOMAIN=

# -----------------------------------------------------------------------------
# Email Configuration (optional - for production)
# -----------------------------------------------------------------------------
# SMTP settings for sending emails
# Leave empty to use console backend in development
# -----------------------------------------------------------------------------
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@example.com

# -----------------------------------------------------------------------------
# Security Settings (for production)
# -----------------------------------------------------------------------------
# CORS_ALLOWED_ORIGINS: Frontend URLs allowed to access API
# CSRF_TRUSTED_ORIGINS: Trusted origins for CSRF
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# -----------------------------------------------------------------------------
# Payment Gateways (optional - for production)
# -----------------------------------------------------------------------------
# bKash Configuration
# BKASH_APP_KEY=
# BKASH_APP_SECRET=
# BKASH_USERNAME=
# BKASH_PASSWORD=
# BKASH_SANDBOX=True

# Nagad Configuration
# NAGAD_MERCHANT_ID=
# NAGAD_MERCHANT_KEY=
# NAGAD_SANDBOX=True

# SSLCommerz Configuration
# SSLCOMMERZ_STORE_ID=
# SSLCOMMERZ_STORE_PASSWORD=
# SSLCOMMERZ_SANDBOX=True
